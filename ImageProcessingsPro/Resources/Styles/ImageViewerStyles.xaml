  <!--菜单Panel样式-->
  <Style x:Key="NavBarStyle"
         TargetType="{x:Type StackPanel}">
    <Style.Setters>
      <Setter Property="Opacity"
              Value="0.6" />
    </Style.Setters>
    <Style.Triggers>
      <DataTrigger Binding="{Binding IsMouseOver, ElementName=Viewer, Mode=OneWay}"
                   Value="True">
        <Setter Property="Effect">
          <Setter.Value>
            <DropShadowEffect BlurRadius="4"
                              ShadowDepth="0"
                              Opacity="0.8"
                              Direction="0" />
          </Setter.Value>
        </Setter>
        <Setter Property="Opacity"
                Value="1.0" />
      </DataTrigger>
    </Style.Triggers>
  </Style>


  <!--菜单Panel样式-->
  <Style x:Key="MousePixelStyle"
         TargetType="{x:Type Border}">
    <Style.Setters>
      <Setter Property="Opacity"
              Value="0" />
      <Setter Property="Background"
              Value="WhiteSmoke" />
      <Setter Property="CornerRadius"
              Value="4" />
    </Style.Setters>
    <Style.Triggers>
      <DataTrigger Binding="{Binding IsMouseOver, ElementName=ImageView, Mode=OneWay}"
                   Value="True">
        <Setter Property="Effect">
          <Setter.Value>
            <DropShadowEffect BlurRadius="4"
                              ShadowDepth="0"
                              Opacity="0.8"
                              Direction="0" />
          </Setter.Value>
        </Setter>
        <Setter Property="Opacity"
                Value="1.0" />
      </DataTrigger>
    </Style.Triggers>
  </Style>


  <!--对ImageViewer的焦点高亮效果-->
  <Style x:Key="OuterGlowStyle"
         TargetType="{x:Type Border}">
    <Style.Setters>
      <Setter Property="BorderBrush"
              Value="#FFB4B4B4" />
      <Setter Property="BorderThickness"
              Value="1" />
      <Setter Property="CornerRadius"
              Value="4" />
    </Style.Setters>
    <Style.Triggers>
      <DataTrigger Binding="{Binding IsFocused, ElementName=Viewer, Mode=OneWay}"
                   Value="True">
        <!--边缘阴影-->
        <Setter Property="Effect">
          <Setter.Value>
            <DropShadowEffect BlurRadius="4"
                              ShadowDepth="0"
                              Opacity="1"
                              Direction="0"
                              Color="#FF118BDC" />
          </Setter.Value>
        </Setter>
        <!--轮廓变色-->
        <Setter Property="BorderBrush"
                Value="#FF17A2FF" />
      </DataTrigger>
    </Style.Triggers>
  </Style>

</ResourceDictionary>